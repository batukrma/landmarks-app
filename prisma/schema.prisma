generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Landmark {
  id          Int        @id @default(autoincrement())
  name        String?    @db.VarChar(255)
  latitude    Decimal    @db.Decimal(12, 8)
  longitude   Decimal    @db.Decimal(12, 8)
  description String?
  category    String?    @db.VarChar(100)
  planItems   PlanItem[]

  @@map("landmarks")
}

model VisitingPlan {
  id    Int        @id @default(autoincrement())
  name  String     @db.VarChar(255)
  items PlanItem[]

  @@map("visiting_plans")
}

model PlanItem {
  id             Int          @id @default(autoincrement())
  visitingPlanId Int
  landmarkId     Int
  plannedDate    DateTime     @db.Date
  visited        Boolean      @default(false)
  visitingPlan   VisitingPlan @relation(fields: [visitingPlanId], references: [id], onDelete: Cascade)
  landmark       Landmark     @relation(fields: [landmarkId], references: [id], onDelete: Cascade)

  @@map("plan_items")
}
